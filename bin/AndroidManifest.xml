<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yummy.candies.candybox2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="yummy.candies.candybox2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="yummy.candies.candybox2.Merchant"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="yummy.candies.candybox2.MERCHANT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="yummy.candies.candybox2.Inventory"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="yummy.candies.candybox2.INVENTORY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="yummy.candies.candybox2.Quest"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="yummy.candies.candybox2.QUEST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
