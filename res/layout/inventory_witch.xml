<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="And I fortunately know a little magic
It's a talent that I always have possessed
And dear lady, please don't laugh
I use it on behalf
Of the miserable, the lonely, and depressed (pathetic)"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/witch" />

    <Button
        android:id="@+id/witchfaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="25dp"
        android:text="Faster Candies! Faster! (50,000 Lollipops)" />

    <Button
        android:id="@+id/witchmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/witchfaster"
        android:layout_below="@+id/witchfaster"
        android:text="More candies! MORE! (40,000 Lollipops)" />

    <Button
        android:id="@+id/witchsword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/witchmore"
        android:layout_below="@+id/witchmore"
        android:text="Sword! Better Sword! (90,000 Lollipops)" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/witchmore"
        android:layout_alignParentLeft="true"
        android:text="@string/back" />

</RelativeLayout>