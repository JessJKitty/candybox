<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/underwater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/underwater" />

    <Button
        android:id="@+id/goblin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/underwater"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="@string/goblin" />

    <Button
        android:id="@+id/forest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/goblin"
        android:layout_alignRight="@+id/underwater"
        android:layout_marginBottom="29dp"
        android:text="@string/forest" />

</RelativeLayout>